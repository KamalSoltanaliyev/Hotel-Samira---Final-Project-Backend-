
@{
    ViewData["Title"] = "Detail";
}

<style>
    .image-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 20px;
    }

    .card-img-top {
        max-width: 300px;
        max-height: 300px;
    }
</style>

<div class="content-wrapper">
    <div class="row justify-content-center mt-4">
        <div class="col-lg-6">
            <div class="card">

                <div class="image-container">
                    @* @foreach (var image in Model.Images)
                    {
                        <img class="card-img-top" src="~/assets/images/@image.Image" alt="Card image cap">
                    } *@
                    <img class="card-img-top" src="~/assets/images" alt="Card image cap">
                    <img class="card-img-top" src="~/assets/images/" alt="Card image cap">
                    <img class="card-img-top" src="~/assets/images/" alt="Card image cap">
                    <img class="card-img-top" src="~/assets/images/" alt="Card image cap">
                </div>

                <div class="card-body">
                    <p class="card-text">Title: </p>
                    <p class="card-text">Description: </p>
                    <p class="card-text">Number of Rooms: </p>
                    <p class="card-text">Number of Adults: </p>
                    <p class="card-text">Number of Children: </p>
                    <p class="card-text">Floor: </p>
                    <p class="card-text">Number of Beds: </p>
                    <p class="card-text">Bed Size: </p>
                    <p class="card-text">Area: </p>
                    <p class="card-text">Check In: </p>
                    <p class="card-text">Check Out: </p>
                    <p class="card-text">Rating: </p>
                    <p class="card-text">Price: </p>
                    <a asp-action="Index" class="btn btn-primary">Go Back</a>
                </div>
            </div>
        </div>
    </div>
</div>
