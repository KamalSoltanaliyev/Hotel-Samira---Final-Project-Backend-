@{
    ViewData["Title"] = "Create Room";
}
@model ProductCreateViewModel
<div class="content-wrapper">
    <div class="row">
        <div class="col-md-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Create Room</h4>
                    <form class="forms-sample" method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <label for="Title">Title</label>
                            <input class="form-control" asp-for="Title" placeholder="Title">
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="Rooms">Number of Rooms</label>
                            <input class="form-control" asp-for="Rooms" placeholder="Rooms">
                            <span asp-validation-for="Rooms" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="Adults">Number of Adults</label>
                            <input class="form-control" asp-for="Adults" placeholder="Adults">
                            <span asp-validation-for="Adults" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="Children">Number of Children</label>
                            <input class="form-control" asp-for="Children" placeholder="Children">
                            <span asp-validation-for="Children" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="Floor">Floor</label>
                            <input class="form-control" asp-for="Floor" placeholder="Floor">
                            <span asp-validation-for="Floor" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="NumberOfBeds">Number of Beds</label>
                            <input class="form-control" asp-for="NumberOfBeds" placeholder="Number Of Beds">
                            <span asp-validation-for="NumberOfBeds" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="BedSize">The Size of Bed</label>
                            <input class="form-control" asp-for="BedSize" placeholder="Bed Size">
                            <span asp-validation-for="BedSize" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="Area">Area</label>
                            <input class="form-control" asp-for="Area" placeholder="Area">
                            <span asp-validation-for="Area" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="CheckIn">Chech In</label>
                            <input type="date" class="form-control" asp-for="CheckIn" placeholder="Check In">
                            <span asp-validation-for="CheckIn" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="CheckOut">Check Out</label>
                            <input type="date" class="form-control" asp-for="CheckOut" placeholder="Check Out">
                            <span asp-validation-for="CheckOut" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="Description">Description</label>
                            <input class="form-control" asp-for="Description" placeholder="Description">
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="Price">Price</label>
                            <input class="form-control" asp-for="Price" placeholder="Price">
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="Rating">Rating</label>
                            <input class="form-control" asp-for="Rating" placeholder="Rating">
                            <span asp-validation-for="Rating" class="text-danger"></span>
                        </div>
                        @* <div class="form-group">
                            <label for="Image">Image</label>
                            <input class="form-control" asp-for="Image" placeholder="Image" accept="image/*">
                            <span asp-validation-for="Image" class="text-danger"></span>
                        </div> *@

                        @* <div class="form-group" id="imageInputs">
                            <label for="Image">Image</label>
                            <span asp-validation-for="ProductImage" class="text-danger"></span>
                            <input id="imageInput" class="form-control" asp-for="ProductImage" placeholder="Image" accept="image/*">
                        </div> *@

                        <div class="form-group" id="imageInputs">
                            <label for="Image">Image</label>
                            <span asp-validation-for="ProductImage" class="text-danger"></span>
                            <input id="imageInput" class="form-control" asp-for="ProductImage" placeholder="Image" accept="image/*" multiple>
                        </div>

                        <button type="button" id="addImage" class="btn-success">Add Image</button><br><br><br>

                        <div class="form-group">
                            <label for="category">Categories</label>
                            <select class="form-control" id="category" name="CategoryId">
                                @foreach (Category category in ViewBag.Categories)
                                {
                                    <option value="@category.Id">@category.Name</option>
                                }
                            </select>
                        </div>
                        <button type="submit" class="btn btn-primary mr-2">Submit</button>
                        <button asp-action="Index" class="btn btn-light">Cancel</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



