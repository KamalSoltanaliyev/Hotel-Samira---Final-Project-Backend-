@{
    ViewData["Title"] = "Rooms";
}

@model List<Product>

<div class="container-fluid">
    <h1 class="h3 mb-2 text-gray-800">Rooms</h1>
    <a asp-action="Create" class="btn btn-primary mb-4">Create</a>

    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered text-center" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Image</th>
                            <th>Title</th>
                            <th>Rating</th>
                            <th>Number of Rooms</th>
                            <th>Number of Adults</th>
                            <th>Number of Children</th>
                            <th>Floor</th>
                            <th>Area</th>
                            <th>Check In</th>
                            <th>Check Out</th>
                            <th>Price</th>
                            <th>Category</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model)
                        {
                            <tr>
                                <td>
                                    <img src="~/assets/images/@(product.Images.FirstOrDefault()?.Image ?? "no-image.webp")" class="img-thumbnail" />
                                </td>
                                <td>@product.Title</td>
                                <td>@product.Rating</td>
                                <td>@product.Rooms</td>
                                <td>@product.Adults</td>
                                <td>@product.Children</td>
                                <td>@product.Floor</td>
                                <td>@product.Area</td>
                                <td>@product.CheckIn</td>
                                <td>@product.CheckOut</td>
                                <td>@product.Price</td>
                                <td>@product.Category.Name</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a class="btn btn-info" asp-action="Detail" asp-route-id="@product.Id">Detail</a>
                                        <a class="btn btn-warning" asp-action="Update" asp-route-id="@product.Id">Update</a>
                                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@product.Id">Delete</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    .img-thumbnail {
        max-width: 100px;
        max-height: 100px;
    }

    .table th, .table td {
        vertical-align: middle;
    }

    .btn-group .btn {
        margin-right: 5px;
    }
</style>

