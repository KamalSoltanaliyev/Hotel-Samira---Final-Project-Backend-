
@{
    ViewData["Title"] = "Delete";
}

@model Product

<div class="content-wrapper">
    <div class="row justify-content-center mt-4">
        <div class="col-lg-6">
            <div class="card">
                <img class="card-img-top mx-auto d-block mt-3" src="~/assets/images/@Model.Images.First(i => i != null).Image" style="width: 50%" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">@Model.Title</h5>
                    <p class="card-text">Description: @Model.Description</p>
                    <p class="card-text">Price: $@Model.Price/night</p>
                    <div class="btn-box d-flex">
                        <a asp-action="Index" class="btn btn-primary mr-3">Go Back</a>
                        <form method="post">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
