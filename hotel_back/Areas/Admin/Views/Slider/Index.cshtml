@{
    ViewData["Title"] = "Slider";
}
@model List<Slider>
<div class="container-fluid">

    <h1 class="h3 mb-2 text-gray-800">Slider</h1>
    <a asp-action="Create" class="btn btn-primary mb-4">Create</a>
    
    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Image</th>
                            <th>Description</th>
                            <th>Actions</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var slider in Model)
                        {
                            <tr>
                                <td><img class="img-thumbnail" src="~/assets/images/@slider.Image" alt="Slider Image"></td>
                                <td>@slider.Description</td>
                                <td>
                                    <a class="btn btn-info" asp-action="Detail" asp-route-id="@slider.Id">Detail</a>
                                    <a class="btn btn-warning" asp-action="Update" asp-route-id="@slider.Id">Update</a>
                                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@slider.Id">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>

<style>
    .img-thumbnail {
        max-width: 100px;
        max-height: 100px;
    }
</style>
