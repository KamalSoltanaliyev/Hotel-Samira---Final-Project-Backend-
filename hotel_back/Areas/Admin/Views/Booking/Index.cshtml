
@{
    ViewData["Title"] = "Index";
}
@model List<Booking>
<div class="container-fluid">
    <h1 class="h3 mb-2 text-gray-800">Bookings</h1>

    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered text-center" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>User Name</th>
                            <th>Booking Details</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var booking in Model)
                        {
                            <tr>
                                <td>@booking.User.UserName</td>
                                <td><a asp-action="Detail" asp-route-id="@booking.Id" class="btn btn-info">Detail</a></td>
                                <td>
                                    <form asp-action="Delete" method="post" onsubmit="return confirm('Are you sure you want to delete this booking?');">
                                        <input type="hidden" name="id" value="@booking.Id" />
                                        <button type="submit" class="btn btn-danger">
                                            <i class="fa-solid fa-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    .img-thumbnail {
        max-width: 100px;
        max-height: 100px;
    }

    .table th, .table td {
        vertical-align: middle;
    }

    .btn-group .btn {
        margin-right: 5px;
    }
</style>

